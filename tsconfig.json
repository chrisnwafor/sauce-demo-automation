{
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./",
        "types": ["node", "@cucumber/cucumber", "@playwright/test"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
